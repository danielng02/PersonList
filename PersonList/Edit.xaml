<Window x:Class="PersonList.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonList"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Label Content="Name:"/>
                <TextBox Text="{Binding Name}" Margin="20, 0" />
            </StackPanel>

            <StackPanel Grid.Row="1">
                <Label Content="State:"/>
                <TextBox Text="{Binding Surname}" Margin="20, 0" />
            </StackPanel>

            <Button x:Name="AddButton" Content="Add / Change" Click="AddButton_Click" Grid.Row="6" Margin="0, 10"/>
        </Grid>
    </Grid>
</Window>
